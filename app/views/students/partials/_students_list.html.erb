<div class="content">
        <div class="row">
            <div class="col-md-12">
            <div class="card">
            <div class="card-header row m-0">
            <h4 class="card-title col-md-8"> Students List</h4>
            <div class="col-md-3 text-right">
            <a class="btn btn-primary btn-round btn-lg btn-block mb-3" href="/students/new">
          <i class="now-ui-icons ui-1_simple-add pr-2"></i>
          <span>Create</span>
        </a>
        </div>
            </div>  <! -- card-header --> 
                <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead class=" text-primary">
                    <th>ID</th>
                      <th></th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Education</th>
                    </thead>
                    <tbody>
                    <% @students.each do |student|%>
                        <tr id="student-<%= student.id %>">
        <td>  <%= student.id %></td>
        <td><div class="card-avatar list mx-auto">
          <img class="avatar_sm list" src="<%= student.avatar %>">
            </div>
            </td>
        <td> <%= student.first_name %> &nbsp;
          <%= student.last_name %></td>
          <td>  <%= student.email %></td>
          <td>  <%= student.education %></td>
          <td>  <%= link_to("Show", edit_student_path(student), :class => 'action view') %></td>
          <td><%= link_to "Delete", student_path(student), class: "delete", remote: true, method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
          <% end %>
                    </tbody>
                    </table>
            </div>       
            </div>             
        </div>  <!-- row --> 
    </div>  <!-- content -->  











