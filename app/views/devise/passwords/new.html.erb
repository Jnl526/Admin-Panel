<div class="login full-page bd-content p-8" id="content" >
  <div class="content">
    <div class="container-fluid">
      <div class="row ">
        <div class="col-md-4 ml-auto mr-auto">
      <div class="card card-plain">
        <div class="card-header card-header-primary">
          <h4 class="card-title text-center text-white">Forgot your password?</h4>
        </div>
      <div class="card-body mt-5">  
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= devise_error_messages! %>
                <div class="row m-0">
                  <div class="input-group no-border form-control-lg">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                </div>

                <div class="actions col-md-12 text-center">
                  <%= f.submit "Reset Password", class: "btn btn-primary btn-round btn-lg btn-block mb-3" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>
              </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
