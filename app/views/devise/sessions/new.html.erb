<div class="login full-page bd-content p-8" id="content" >
  <div class="content">
    <div class="container-fluid">
      <div class="row ">
        <div class="col-md-4 ml-auto mr-auto">
      <div class="card card-plain">
        <div class="card-header card-header-primary">
          <h4 class="card-title text-center text-white">Welcome Back! </h4>
        </div>
      <div class="card-body mt-5">  
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row m-0">
        <div class="input-group no-border form-control-lg">
        
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"  %>
          <p class="demo">demo: admin@domain.com</p>
        </div>

        <div class="input-group no-border form-control-lg">
          <%= f.label :password %><br />
          <%= f.password_field :password,class: "form-control", autocomplete: "off" %>
          <p class="demo">demo: test123</p>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div>
            <%= f.check_box :remember_me%>&nbsp;
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions col-md-12 text-center">
          <%= f.submit "Log in", class: "btn btn-primary btn-round btn-lg btn-block mb-3"%>
        </div>
      <% end %>

<%= render "devise/shared/links" %>
      </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>