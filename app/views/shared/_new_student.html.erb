<div id="content">
  <div id="content-header">

<div class="row-fluid">
  <div class="span12">
<div class="widget-box">
  <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>


    <h5>New student Details</h5>
  </div>
  <div class="widget-content nopadding">
    <div class="form-horizontal">

      <div class="control-group">
        <%= form_for @student do |f| %>
        <%= f.label :first_name, "First name :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :first_name, class: 'span11', autofocus: true, placeholder: 'First Name' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :last_name, "Last name :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :last_name, class: 'span11', autofocus: true, placeholder: 'Last Name' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :dob, "Age :", class: "control-label" %>
        <div class="controls">
      <%= f.text_field :dob, class: 'span11', autofocus: true, placeholder: 'DOB'%>
        </div>
      </div>
      
      <div>
        <%= f.submit class: "btn btn-success"%>
      <% end %>
      
    </div>

    </div>
  </div>
</div>
</div>
</div>
</div>
</div>