<div class="content">
<div class="row">
    <div class="col-md-12">
    <div class="card">
        <div class="card-header">
        <h4 class="card-title"> Cohorts List</h4>
        <a href="/cohorts/new">
      <i class="now-ui-icons ui-1_simple-add"></i>
      <p>Create</p>
    </a>
        </div>  <! -- card-header --> 
        <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead class=" text-primary">
              <th></th>
              <th>Name</th>
              <th>Start Date</th>
              <th>End Date</th>
            </thead>
            <tbody>
            <% @cohorts.each do |cohort|%>   
                <tr>
  <td><div class="card-avatar list mx-auto">
  <img class="avatar_sm list" src="<%= cohort.avatar %>">
    </div>
    </td>
 <td><%= cohort.name %></td>
 <td><%= cohort.start_date %></td>
  <td><%= cohort.end_date %></td>
 
  <td><%= link_to("View", edit_cohort_path(cohort), :class => 'view') %>
  </td>
  
  </tr>
  <% end %>
            </tbody>
            </table>
    </div>       
    </div>             
</div>  <!-- row --> 
</div>  <!-- content -->  