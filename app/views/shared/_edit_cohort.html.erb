<%= form_for @cohort do |f| %>
    <div class="row">
        <div class="col-md-4 pr-1">
            <div class="form-group">
            <%= f.label :name, "First name", class: "label" %>
            <%= f.text_field :name, class: 'form-control', value: @cohort.name, autofocus: true %>
            </div>
        </div>
        <div class="col-md-4 px-1">
            <div class="form-group">
            <%= f.label :start_date, "Start date", class: "label" %>
            <%= f.date_field :start_date, class: 'form-control', value: @cohort.start_date, autofocus: true %>
            </div>
        </div>
        <div class="col-md-4 px-1">
            <div class="form-group">
            <%= f.label :end_date, "End date", class: "label" %>
            <%= f.date_field :end_date, class: 'form-control', value: @cohort.end_date, autofocus: true %>
            </div>
        </div>
    </div>

<div class="row">

        <div class="col-md-4 pr-1">
        <%= f.label :instructor_id, "Instructor", class: "label" %>
    </div>
        
    </div>
    
    <div class="row">
        <div class="col-md-4 pr-1">
            <div class="form-group">
            
            <%= f.text_field  :instructor_id, class: 'form-control', value: @instructor.first_name, autofocus: true%>
            </div>
        </div>
        <div class="col-md-4 pr-1">
            <div class="form-group">
            <%= f.text_field  :instructor_id, class: 'form-control', value: @instructor.last_name, autofocus: true%>
            </div>
        </div>
    </div>
        
    </div>
    <div class="actions col-md-3 text-center">
    <%= f.submit "Edit", class: "btn btn-primary btn-round btn-lg btn-block mb-3"%>
    </div>
    <% end %>
    <div class="actions col-md-3 text-center">
    <%= link_to "Delete", cohort_path(@cohort), class: "btn btn-primary btn-round btn-lg btn-block mb-3", method: :delete, data: { confirm: "Are you sure?" } %>
    </div>