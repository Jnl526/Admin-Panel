<%= render '/shared/sidenav' %>
<div class="main-panel">
    <%= render '/shared/topnav' %>
    <p class="pg-title"<a class="navbar-brand" href="#pablo">Instructors</a></p>
    <div class="content">
        <div class="row">
            <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                <h4 class="card-title"> Instructors List</h4>
                <a href="/instructors/new">
              <i class="now-ui-icons ui-1_simple-add"></i>
              <p>Create</p>
            </a>
                </div>  <! -- card-header --> 
                <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead class=" text-primary">
                      <th></th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Email</th>
                      <th>Education</th>
                      <th>Salary</th>
                    </thead>
                    <tbody>
                    <% @instructors.each do |instructor|%>   
                        <tr>
          <td><div class="card-avatar list mx-auto">
          <img class="avatar_sm list" src="<%= instructor.avatar %>">
            </div>
            </td>
         <td> <%= instructor.first_name %></h1>
         <td>  <%= instructor.last_name %></td>
          <td>  <%= instructor.email %></td>
          <td>  <%= instructor.education %></td>
          <td>  <%= instructor.salary %></td>
          <td>  <%= link_to("Show", instructor_path(instructor), :class => 'action view') %></td>
          
          
          </tr>
          <% end %>
                    </tbody>
                    </table>
            </div>       
            </div>             
        </div>  <!-- row --> 
    </div>  <!-- content -->  