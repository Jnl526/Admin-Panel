<div class="content">
        <div class="row">
            <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                <h4 class="card-title"> Create A Cohort</h4>
                </div>  <! -- card-header --> 
                <div class="card-body">
                <%= form_for @cohort do |f| %>
                    <div class="row m-0">
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                            <%= f.label :name, "Name", class: "label" %>
                            <%= f.text_field :name, class: 'form-control', autofocus: true %>
                            </div>
                        </div>
                        <div class="col-md-4 px-1">
                            <div class="form-group">
                            <%= f.label :start_date, "Start Date", class: "label" %>
                            <%= f.date_field :start_date , class: 'form-control', autofocus: true %>
                            </div>
                        </div>
                        <div class="col-md-4 px-1">
                            <div class="form-group">
                            <%= f.label :end_date, "End Date", class: "label" %>
                            <%= f.date_field :end_date , class: 'form-control', autofocus: true %>
                            </div>
                        </div>
                    </div> <!-- row1 -->

                <div class="row">
                    <div class="col-md-4 pr-1">
                        <div class="form-group">
                        <%= f.label :instructor_id, "Instructor ID", class: "label" %>
                        <%= f.text_field :instructor_id, class: 'form-control', autofocus: true  %>
                        </div>
                    </div>
                    <div class="col-md-4 pr-1">
                        <div class="form-group">
                        <%= f.label :course_id, "Course ID", class: "label" %>
                        <%= f.text_field  :course_id, class: 'form-control', autofocus: true  %>
                        </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                    <%= f.label :avatar, "Cohort Image", class: "label" %>
                    <%= f.text_field :avatar, cols: 2, rows: 2, class: 'form-control', autofocus: true %>
                    </div>
                    </div>
                 </div> <!-- row2 -->

                    <div class="actions col-md-3 text-center">
                    <%= f.submit "Create", class: "btn btn-primary btn-round btn-lg btn-block mb-3"%>
                    </div>
                    
                    <% end %>
            </div>      
            </div>             
        </div>  <!-- row --> 
    </div>  <!-- content -->  