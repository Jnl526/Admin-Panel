<%= bootstrap_form_for @cohort do |f| %>
    <%= f.text_field :name %>
    <div class="row m-0">
      <div class="col-md-4">
        <%= f.date_field :start_date %>
        </div>
      <div class="col-md-4">
            <%= f.date_field :end_date %>
      </div>
      <div class="col-md-4">
      <%= f.text_field :avatar %>
      </div>
    </div>
    
    <div class="row">
    <div class="col-md-6">
    <%= f.collection_select(:instructor_id, Instructor.all, :id, :name, prompt: true) %>
    </div>
    <div class="col-md-6">
    <%= f.collection_select(:course_id, Course.all, :id, :name, prompt: true) %>
    </div>
    </div>
    <div class="col-md-4">
    <%= f.submit "Update", class: " btn btn-primary btn-round btn-lg btn-block mb-3" %>
    </div>
<% end %>