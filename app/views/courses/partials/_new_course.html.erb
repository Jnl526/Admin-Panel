<div class="content">
        <div class="row">
            <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                <h4 class="card-title"> Create A Course</h4>
                </div>  <! -- card-header --> 
                <div class="card-body">
            <%= form_for @course do |f| %>
                <div class="row m-0">
                    <div class="col-md-8 pr-1">
                        <div class="form-group">
                        <%= f.label :name, "Name", class: "label" %>
                        <%= f.text_field :name, class: 'form-control', autofocus: true %>
                        </div>
                    </div>
                    <div class="col-md-4 px-1">
                        <div class="form-group">
                        <%= f.label :hours, "Hours", class: "label" %>
                        <%= f.text_field :hours, class: 'form-control', autofocus: true %>
                        </div>
                    </div>   
                </div> <!-- row1 -->

                <div class="row">
                <div class="col-md-12">
                <%= f.label :cohort_ids, "Cohorts", class: "label" %>
                    <div class="form-group">
                    <%= f.collection_check_boxes(:cohort_ids, Cohort.all.order(:id), :id, :name, { include_hidden: false }, :multiple => true) do |cohort| %>
                            <%= cohort.check_box %>&nbsp;<%= cohort.label %>
                            &nbsp;
                    <% end %>
                    </div>
                </div>
                </div>  <!-- row2 -->

                <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                    <%= f.label :description, "Description", class: "label" %>
                    <%= f.text_area :description, cols: 2, rows: 3, class: 'form-control', autofocus: true %>
                    </div>
                </div>
            </div> <!-- row3 -->

                <div class="actions col-md-3 text-center">
                <%= f.submit "Create", class: "btn btn-primary btn-round btn-lg btn-block mb-3"%>
                </div>
                    
                </div>
                
                <% end %> <!-- form -->
                </div>      
            </div>             
        </div>  <!-- row --> 
    </div>  <!-- content -->  